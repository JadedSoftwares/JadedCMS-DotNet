@model JadedCms.Models.Auth.LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_AuthLayout";
}

<!-- Create a bootstrap login form -->
<div class="jd-login-form">
    <form asp-action="Login" asp-controller="Auth" method="post">
        <h2 class="text-center">Log in</h2>
        <div class="form-group">
            @Html.TextBoxFor(t => t.Username, new { @class = "form-control", @placeholder = "Username", @required = "required" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(t => t.Password, new { @class = "form-control", @placeholder = "Password", @required = "required" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
        <div class="clearfix">
            <label class="float-left form-check-label">
                @Html.CheckBoxFor(t => t.RememberMe) Remember me</label>
        </div>
    </form>
    <p class="text-center"><a href="#">Create an Account</a></p>
</div>
